<h1>Create a new Portfolio Item</h1>

<%= form_for(@portfolio_item) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :blog_title %>
  </div>
  
  <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, id: :blog_subtitle %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :blog_body %>
  </div>

  <!-- <div class="field">
    <%= form.label :main_image %>
    <%= form.text_field :main_image, id: :blog_main_image %>
  </div> -->

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
